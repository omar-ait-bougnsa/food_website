
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  username String   @unique
  password String
  age      Int?
}

model Product{
  id        Int   @id @default(autoincrement())
  name      String @unique
  description String
  price       Int
  category    String
  image       String
  availability Boolean
}

